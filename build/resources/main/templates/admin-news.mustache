{{>layout/headeradmin}}

<div class="main">
    <section class="module-small">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-3 sidebar">
                    <div class="widget">
                        <h5 class="widget-title font-alt">관리자 화면</h5>
                        <ul class="icon-list">
                            <li><a href="/admin">관리자 페이지</a></li>
                            <li><a href="/">ISAM 홈페이지</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">상품 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/importcar/save">직수입 등록</a></li>
                            <li><a href="/admin/importcar">직수입 리스트</a></li>
                            <li><a href="/usedcar/save">중고차 등록</a></li>
                            <li><a href="/admin/usedcar">중고차 리스트</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">게시판 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/notice">공지사항 목록</a></li>
                            <li><a href="/admin/news">뉴스 목록</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">문의사항 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/contactus">일반 문의사항</a></li>
                            <li><a href="/admin/carcontact">차량 문의사항</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">홈페이지 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/popup">팝업 관리</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-8 col-sm-offset-1">
                    <div class="carpost">
                        <div class="post-header font-alt">
                            <h1 class="post-title">뉴스룸</h1>
                        </div>
                    </div>
                    <div class="post-entr">
                        <div style="text-align: right;">
                            <a href="/news/save" role="button" class="btn btn-border-d btn-round">뉴스등록</a>
                        </div>
                        <table class="table table-striped table-border checkout-table">
                            <tbody>
                            <tr>
                                <th class="hidden-xs">게시글번호</th>
                                <th>제목</th>
                                <th class="hidden-xs">작성자</th>
                                <th>등록일</th>
                                <th></th>
                            </tr>
                            {{#news}}
                                <tr>
                                    <td class="hidden-xs">{{id}}</td>
                                    <td><a href="/news/update/{{id}}">{{title}}</a></td>
                                    <td>{{author}}</td>
                                    <td>{{modifiedDate}}</td>
                                    <td>
                                        <a href="/news/update/{{id}}">수정</a>
                                        <button type="button" class="btn btn-danger" id="btn-news-delete">삭제</button>
                                    </td>
                                </tr>
                            {{/news}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

{{>layout/footeradmin}}