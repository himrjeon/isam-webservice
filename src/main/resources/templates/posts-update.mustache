{{>layout/headermain}}

<div class="main">
    <section class="module bg-dark-60 about-page-header" data-background="/image/inst_pn_test2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">게시글 수정</h2>
                    <div class="module-subtitle font-serif"> </div>
                </div>
            </div>
        </div>
    </section>

    <section class="module-medium" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="col-md-13">
        <form>
            <div class="form-group">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly> <!-- 머스테치는 객체접근시 점으로 구분, post.id 이런식으로 접근함 -->
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly> <!-- Input태그에 읽기만 허용하는 속성. -->
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{post.content}}</textarea>
            </div>
        </form>
        <hr>
                        <div class="my-3 p-3 bg-white rounded shadow-sm" style="padding-top: 10px">
                            <f orm name="form" id="form" role="form" modelAttribute="replyVO" method="post">
                                <div class="row">
                                    <div class="col-sm-10">
                                        <textarea path="content" id="memocontent" class="form-control" rows="3" placeholder="댓글을 입력해 주세요"></textarea>
                                        <input type ="hidden" id="memoauthor" name="memoauthor" value ="{{#uName}}{{uName}}{{/uName}}">
                                    </div>
                                    <div class="col-sm-2">
                                        <button type="button" class="btn btn-sm btn-primary" id="btnReplySave" style="width: 100%; margin-top: 10px"> 저 장 </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="my-3 p-3 bg-white rounded shadow-sm" style="padding-top: 10px">
                            <h6 class="border-bottom pb-2 mb-0">Reply list</h6>
                            <div id="replyList">
                                <div class="form-group">
                                    <br>
                                    {{#comment}}
                                        <h5>{{memo}}</h5>
                                        <h6>{{author}}</h6>
                                    {{/comment}}
                                </div>
                            </div>
                        </div>
        <a href="/freeboard" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

{{>layout/footermain}}