{{>layout/headermain}}

<div class="main">
    <section class="module bg-dark-60 about-page-header" data-background="/image/inst_pn_test2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">게시글 등록</h2>
                    <div class="module-subtitle font-serif"> </div>
                </div>
            </div>
        </div>
    </section>
    <section class="module-medium" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                <div class="col-md-13">
                        <form>
                        <div class="form-group">
                            <label for="title">제목</label>
                            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                        </div>
                        <div class="form-group">
                            <label for="author"> 작성자 </label>
                            <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요" value="{{#uName}}{{uName}}{{/uName}}" readonly>
                        </div>
                        <div class="form-group" style="display:none;">
                            <textarea class="form-control" id="content" rows="15" placeholder="내용을 입력하세요"></textarea>
                        </div>
                    </form>
                    <label for="content"> 내용 </label>
                    <div id="editor"></div>
                    <a href="/freeboard" role="button" class="btn btn-g btn-round">취소</a>
                    <button type="button" class="btn btn-primary" id="btn-save">등록</button>
                </div>
            </div>
            </div>
        </div>
    </section>

